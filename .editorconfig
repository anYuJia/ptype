# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{json,yaml,yml,md}]
indent_style = space
indent_size = 2
